@page "/funddata"

@using FundLib.Model
@inject CommonService CommonService

<h3>数据概览</h3>

<input placeholder="输入代码" @bind="newCode" />
<button @onclick="AddCode">添加基金</button>
<button @onclick="Refresh">刷新数据</button>

<hr />

@if (fundList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <Table Columns="columns" DataSource="fundList" SortMode="TableSortMode.One" Selection="true" ></Table>
}
